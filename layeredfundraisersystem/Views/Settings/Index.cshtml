@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<ul class="nav nav-tabs tabMenu">
    <li class="active"><a data-toggle="tab" href="#home">Current System Info</a></li>
    <li><a data-toggle="tab" href="#menu1">Change System Info</a></li>

</ul>
<div class="tab-content">
    <div id="home" class="tab-pane fade in active">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <br />
                    <div class="panel panel-info">
                        <div class="panel-body" style="text-align:center">
                            <table class="table table-bordered text-center">
                                <tr>
                                    <th style="text-align:center">Service Charge</th>
                                    <th style="text-align:center">Refund Charge</th>
                                    <th style="text-align:center">Total Income</th>
                                    <th style="text-align:center">Total Collected amount</th>
                                </tr>
                                <tr>
                                    <td>@Model.ServiceCharge %</td>
                                    <td>@Model.RefundCharge %</td>
                                    <td>@Model.TotalIncome.ToString("0.00") /=</td>
                                    <td>@Model.CollectedAmount.ToString("0.00") /=</td>
                                </tr>
                            </table>
                            <div class="col-md-6 col-md-offset-3">
                                <table class="table table-bordered">
                                    <tr>
                                        <th>Contact No</th>
                                        <td>@Model.SystemContactNo</td>
                                    </tr>
                                    <tr>
                                        <th>Email Address</th>
                                        <td>@Model.SystemEmail</td>
                                    </tr>
                                    <tr>
                                        <th>Address</th>
                                        <td>@Model.SystemAddress</td>
                                    </tr>
                                    <tr>
                                        <th>Bank Account No</th>
                                        <td>@Model.SystemBankAccount</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="menu1" class="tab-pane fade">
        <form method="post">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <br />
                        <div class="panel panel-info">
                            <div class="panel-body">
                                <div class="form-group">
                                    <label>Change Service Charge: (in %) </label>
                                    <input type="number" class="form-control" name="ServiceCharge" min="0" step=".01" value="@Model.ServiceCharge" />
                                </div>
                                <div class="form-group">
                                    <label>Change Refund Charge: (in %) </label>
                                    <input type="number" class="form-control" name="RefundCharge" min="0" step=".01" value="@Model.RefundCharge" />
                                </div>
                                <div class="form-group">
                                    <label>Change Contact No: </label>
                                    <input type="text" class="form-control" name="ContactNo" value="@Model.SystemContactNo" />
                                </div>
                                <div class="form-group">
                                    <label>Change Email Address: </label>
                                    <input type="text" class="form-control" name="Email" value="@Model.SystemEmail" />
                                </div>
                                <div class="form-group">
                                    <label>Change Address: </label>
                                    <input type="text" class="form-control" name="Address" value="@Model.SystemAddress" />
                                </div>
                                <div class="form-group">
                                    <label>Change Bank Account No: </label>
                                    <input type="text" class="form-control" name="AccNo" value="@Model.SystemBankAccount" />
                                </div>
                                <span class="text-danger pull-left">@ViewBag.ErrorMessage</span>
                                <input type="submit" class="btn btn-primary pull-right" value="Change" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>