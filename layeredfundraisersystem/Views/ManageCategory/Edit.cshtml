<script type="text/javascript">
    $(function () {
        $(document).on("click", "form", function (e) {

            if ($("#CategoryName").val() == "") {
                $("#error_message").html("Enter a valid category");
                e.preventDefault();
                return false;
            }
            else
            {
                $("#error_message").html("");
                return true;
            }
        });
    });
</script>
