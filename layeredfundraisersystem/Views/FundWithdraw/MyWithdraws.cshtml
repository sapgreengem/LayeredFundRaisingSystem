
@{
    ViewBag.Title = "MyWithdraws";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<ul class="nav nav-tabs tabMenu">
    <li class="active"><a data-toggle="tab" href="#home">Requests Pending</a></li>
    <li><a data-toggle="tab" href="#menu1">Fund Transfered</a></li>

</ul>

<script>
    $(function () {
        $(".example").dataTable();
    })
</script>

<div class="tab-content">
    <div id="home" class="tab-pane fade in active">
        <br />
        <div class="container">
            <div class="row">
                <div>
                    @if (ViewBag.ErrorMessage == null)
                    {
                        <table class="table table-bordered" style="text-align: center;">
                            <thead>
                                <tr>
                                    <th>Post Title</th>
                                    <th>Requested Amount</th>
                                    <th>Amount After Service Charge</th>
                                    <th>Requested Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.AllRequests)
                                {
                                    if (item.RequestStatus == "Pending")
                                    {
                                        <tr>
                                            <td>@item.PostTitle</td>
                                            <td>@item.WithdrawAmount/=</td>
                                            <td>@item.WithdrawWithCharge/=</td>
                                            <td>@item.WithdrawDate</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <span>@ViewBag.ErrorMessage</span>
                    }
                </div>
            </div>
        </div>

    </div>
    <div id="menu1" class="tab-pane fade">
        <br />
        <div class="container">
            <div class="row">
                <div>
                    @if (ViewBag.ErrorMessage == null)
                    {
                        <table class="table table-bordered" style="text-align: center;">
                            <thead>
                                <tr>
                                    <th>Post Title</th>
                                    <th>Requested Amount</th>
                                    <th>Amount After Service Charge</th>
                                    <th>Requested Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.AllRequests)
                                {
                                    if (item.RequestStatus == "Transfered")
                                    {
                                        <tr>
                                            <td>@item.PostTitle</td>
                                            <td>@item.WithdrawAmount/=</td>
                                            <td>@item.WithdrawWithCharge/=</td>
                                            <td>@item.WithdrawDate</td>
                                        </tr>
                                    }

                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <span>@ViewBag.ErrorMessage</span>

                    }
                </div>
            </div>
        </div>
    </div>
</div>
