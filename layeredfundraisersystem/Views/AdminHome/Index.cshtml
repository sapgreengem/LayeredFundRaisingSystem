@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row text-center">
        <div class="col-md-4" style="border:solid">
            <h1>Running Campains</h1>
            <h1>@ViewBag.TotalActivePosts</h1>
        </div>
        <div class="col-md-4" style="border:solid">
            <h1>Active Users</h1>
            <h1>@ViewBag.TotalActiveUsers</h1>
        </div>
        <div class="col-md-4" style="border:solid">
            <h1>Total Income</h1>
            <h1>@ViewBag.TotalIncome</h1>
        </div>
        <div class="col-md-4" style="border:solid">
            <h1>Collected So Far</h1>
            <h1>@ViewBag.TotalCollection</h1>
        </div>
    </div>
</div>