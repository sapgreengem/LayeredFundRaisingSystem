@model FundRaiserSystemEntity.Administration
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <table class="table">
                <tr>
                    <td>First Name</td>
                    <td>@Model.FirstName</td>
                </tr>
                <tr>
                    <td>Last Name</td>
                    <td>@Model.LastName</td>
                </tr>
                <tr>
                    <td>Email Address</td>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <td>Address</td>
                    <td>@Model.Address</td>
                </tr>
                <tr>
                    <td>Role</td>
                    <td>@Model.Role</td>
                </tr>
            </table>
            <a class="btn btn-primary pull-left" href="/AdminProfile/Edit"><i class="glyphicon glyphicon-edit"></i>Edit Profile</a>
            <a class="btn btn-primary pull-right" href="/AdminProfile/ChangePassword"><i class="glyphicon glyphicon-lock"></i>Change Password</a>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {

        $(document).on("submit", "form", function (e) {

            if ($("#fname").val() == "") {
                $("#error_fname").html("First Name Cannot be empty");
                e.preventDefault();
                return false;
            }

            else
                $("#error_message").html("");

            if ($("#lname").val() == "")
            {
                $("#error_lname").html("Last Name Cannot be empty");
                e.preventDefault();
                return false;
            }
            else
                $("#error_lname").html("");

            if ($("#email").val() == "")
            {
                $("#error_email").html("Email Cannot be empty");
                e.preventDefault();
                return false;
            }
            else
                $("#error_email").html("");

            if ($("#address").val() == "") {
                $("#error_address").html("Address Cannot be empty");
                e.preventDefault();
                return false;
            }
            else
            {
                $("#error_address").html("");
                return true;
            }
        });
    });
</script>
