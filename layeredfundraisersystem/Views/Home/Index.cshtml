@model IEnumerable<FundRaiserSystemEntity.FundRequestPost>
@{
    ViewBag.Title = "Index";
    if (Session["Login"] == null)
    {
        Layout = "~/Views/Shared/_ViewersLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_UserLayout.cshtml";
    }
}

@if (Session["Login"] != null)
{
    @section username{
        @ViewBag.LoginName
    }
}
@section styles{
    <style type="text/css">
    .im-overlay {
            position: absolute;
            top: 80%;
            bottom: 5%;
            left: 20%;
            right: 20%;
            text-align: center;
        }

        .image-width{
        width:100%;

        }
    </style>
    
}


<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/PostImages/131500687075842019 Capture.JPG" alt="Los Angeles" style="width:100%;">
                <div class="carousel-caption d-none d-md-block">
                    <h3>1st Img</h3>
                    <p>...</p>
                </div>
            </div>

            <div class="item">
                <img src="~/PostImages/131500690104798579 Capture.JPG" alt="Chicago" style="width:100%;">
                <div class="carousel-caption d-none d-md-block">
                    <h3>2nd Img</h3>
                    <p>...</p>
                </div>
            </div>

            <div class="item">
                <img src="~/PostImages/131500685393309156 proof.JPG" alt="New york" style="width:100%;">
                <div class="carousel-caption d-none d-md-block">
                    <h3>3rd Img</h3>
                    <p>...</p>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="im-overlay">
    <a href="~/AddFundRequest" class="btn btn-lg btn-success">Start Campain</a>
    <a href="~/ViewAllPosts" class="btn btn-lg btn-success">Donate Now</a>
    
</div>

<!-- CONTENT WRAPPER START -->
<div class="content-wrapper bg-dark-white clearfix">
    <!-- PRODUCT CONTAINER START -->
    <div class="container">
        <div class="row">
            <!-- SECTION WRAPPER -->
            <!---------------------------- TRENDING Start --------------------------->
            <div class="section clearfix">
                <h1 class="section-header">Trending</h1>
                <div class="clearfix"></div>
                <div class="featured-product-slider clearfix">
                    @{
                        int processed2 = 0;
                        foreach (var item in ViewBag.trending)
                        {
                            <div style="float:left; padding-left:15px; padding-right:15px; width:290px; height:300px; text-align:center;">
                                <a class="post" href="/PostDetailsView/Index/@item.PostId">
                                    <div class="post-image" style="height:200px; width:260px">
                                        <img style="height:200px; width:250px" src="~/PostImages/@item.PostImage" alt="@item.PostImage">
                                    </div>
                                    <div style="padding-top:5px; padding-bottom:5px; height:50px;">
                                        <h4 class="post-title" style="overflow:hidden">@item.PostTitle</h4>
                                    </div>
                                </a>

                                <div class="post-money" style="height:15px; padding-top:5px; padding-bottom:20px;">@item.CollectedAmount/= Raised of @item.RequiredAmount/=</div>

                                <div class="progress">
                                    <div class="progress-bar-success text-center" role="progressbar" aria-valuenow="70"
                                         aria-valuemin="0" aria-valuemax="100" style="width:@((item.CollectedAmount / item.RequiredAmount)*100)%; color:White">
                                        @Convert.ToInt32(((item.CollectedAmount / item.RequiredAmount) * 100))%
                                    </div>
                                </div>
                            </div>
                            if (++processed2 == 4)
                            {
                                break;
                            }
                        }
                    }
                </div>
                <a class="pull-right btn btn-default" href="/ViewAllPosts">View All</a>
            </div>
            <!---------------------------- TRENDING END  --------------------------->
            <!----------------------------Top Viewed Start --------------------------->
            <div class="section clearfix">
                <h1 class="section-header">Top Viewed</h1>
                <div class="clearfix"></div>
                <div class="featured-product-slider clearfix">
                    @{
                        int processed = 0;
                        foreach (var item in ViewBag.topViewed)
                        {
                            <div style="float:left; padding-left:15px; padding-right:15px; width:290px; height:300px; text-align:center;">
                                <a class="post" href="/PostDetailsView/Index/@item.PostId">
                                    <div class="post-image" style="height:200px; width:260px">
                                        <img src="~/PostImages/@item.PostImage" style="height:200px; width:250px" alt="N/A">
                                    </div>
                                    <div style="padding-top:5px; padding-bottom:5px; height:50px;">
                                        <h4 class="post-title">@item.PostTitle</h4>
                                    </div>
                                </a>


                                <div class="post-money" style="height:15px; padding-top:5px; padding-bottom:20px;">
                                    @item.CollectedAmount/= Raised of @item.RequiredAmount/=
                                </div>

                                <div class="progress">
                                    <div class="progress-bar-success text-center" role="progressbar" aria-valuenow="70"
                                         aria-valuemin="0" aria-valuemax="100" style="width:@((item.CollectedAmount / item.RequiredAmount)*100)%; color:White">
                                        @Convert.ToInt32(((item.CollectedAmount / item.RequiredAmount) * 100))%
                                    </div>
                                </div>
                            </div>
                            if (++processed == 4)
                            {
                                break;
                            }
                        }
                    }

                </div>
                <a class="pull-right btn btn-default" href="/ViewAllPosts">View All</a>
            </div>
            <!----------------------------Top Viewed end --------------------------->
            <!----------------------------Recomended start --------------------------->
            <div class="section clearfix">
                <h1 class="section-header">Recommended for you</h1>
                <div class="clearfix"></div>
                <div class="featured-product-slider clearfix">
                    @{
                        int processed1 = 0;
                        foreach (var item in ViewBag.recomended)
                        {
                            <div style="float:left; padding-left:15px; padding-right:15px; width:290px; height:300px; text-align:center;">
                                <a class="post" href="/PostDetailsView/Index/@item.PostId">
                                    <div class="post-image" style="height:200px; width:260px">
                                        <img src="~/PostImages/@item.PostImage" style="height:200px; width:250px" alt="N/A">
                                    </div>
                                    <div style="padding-top:5px; padding-bottom:5px; height:50px;">
                                        <h4 class="post-title">@item.PostTitle</h4>
                                    </div>
                                </a>


                                <div class="post-money" style="height:15px; padding-top:5px; padding-bottom:20px;">
                                    @item.CollectedAmount/= Raised of @item.RequiredAmount/=
                                </div>

                                <div class="progress">
                                    <div class="progress-bar-success text-center" role="progressbar" aria-valuenow="70"
                                         aria-valuemin="0" aria-valuemax="100" style="width:@((item.CollectedAmount / item.RequiredAmount)*100)%; color:White">
                                        @Convert.ToInt32(((item.CollectedAmount / item.RequiredAmount) * 100))%
                                    </div>
                                </div>
                            </div>
                            if (++processed1 == 4)
                            {
                                break;
                            }
                        }
                    }
                </div>
                <a class="pull-right btn btn-default" href="/ViewAllPosts">View All</a>
            </div>
        </div> 	<!-- ROW END -->
    </div>	<!-- PRODUCT CONTAINER END -->
</div>	<!-- CONTENT WRAPPER END -->


