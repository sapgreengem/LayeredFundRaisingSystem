@model IEnumerable<FundRaiserSystemEntity.FundRequestPost>
@{
    ViewBag.Title = "Index";
    if (Session["Login"] == null)
    {
        Layout = "~/Views/Shared/_ViewersLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_UserLayout.cshtml";
    }
}

@section styles{
    <style type="text/css">
        .image {
            position: relative;
            width: 100%; /* for IE 6 */
        }

        h2 {
            position: absolute;
            top: 70%;
            left: 65%;
            width: 100%;
            color: #DEB887;
        }

        .img-overlay {
            position: absolute;
            top: 44%;
            bottom: 5%;
            left: 20%;
            right: 20%;
            text-align: center;
        }

            .img-overlay:before {
                content: ' ';
                display: block;
                /* adjust 'height' to position overlay content vertically */
                height: 60%;
            }

        .carousel-inner > .item > img,
        .carousel-inner > .item > a > img {
            display: block;
            max-width: 100%;
            height: 400px;
        }
    </style>
}


<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img class="img-responsive" src="~/icon/131558911483104600 6276445_1444589910.56.jpg" style="width:100%;">
                <div class="carousel-caption d-none d-md-block">
                </div>
            </div>

            <div class="item">
                <img class="img-responsive" src="~/icon/131558938197254073 21232164_1497584765.2809.jpg" style="width:100%;">
                <div class="carousel-caption d-none d-md-block">
                </div>
            </div>

            <div class="item">
                <img class="img-responsive" src="~/icon/131558939743909368 12402201_1467142966.3348.jpg" style="width:100%;">
                <div class="carousel-caption d-none d-md-block">
                </div>
            </div>

        </div>
        <div class="img-overlay">
            <a href="/AddFundRequest" class="btn btn-lg btn-success">Start Campain</a>
            <a href="~/ViewAllPosts" class="btn btn-lg btn-success">Donate Now</a>
        </div>
    </div>
</div>

<br />
<br />
<div class="container">
    <div class="row">
        <h3 class="section-header" style="float:left">Recomended</h3>
        <br />
        <a href="/ViewAllPosts" class="btn btn-default pull-right">View All</a>
        <br />
        <hr />
        <div id="thumbcarousel1" class="carousel slide" data-interval="false">
            <div class="carousel-inner test">
                <div class="item active">
                    @{
                        foreach (var item in ViewBag.recomended)
                        {
                            <div data-target="#carousel" data-slide-to="0" class="col-sm-3 thumb">
                                <a class="post" href="/PostDetailsView/Index/@item.PostId">
                                    <div class="post-image" style="height:200px; width:260px">
                                        <div class="image">
                                            <img style="height:200px; width:255px" src="~/PostImages/@item.PostImage" alt="@item.PostImage">
                                            <h2>@item.AverageRating.ToString("0.0") <i class="glyphicon glyphicon-star"></i></h2>
                                        </div>
                                    </div>
                                    <div style="padding-top:5px; padding-bottom:5px; height:35px; overflow:hidden">
                                        <h4 class="post-title">@item.PostTitle</h4>
                                    </div>
                                </a>

                                <div class="post-money" style="height:15px; text-align:center; padding-top:5px; padding-bottom:20px;">@item.CollectedAmount tk Raised of @item.RequiredAmount tk</div>

                                <div class="progress">
                                    <div class="progress-bar progress-bar-success progress-bar-striped text-center"
                                         role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:@((item.CollectedAmount / item.RequiredAmount)*100)%;">
                                        @Convert.ToInt32(((item.CollectedAmount / item.RequiredAmount) * 100))%
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="item">
                    @{
                        foreach (var item in ViewBag.nextRecomended)
                        {
                            <div data-target="#carousel" data-slide-to="0" class="col-sm-3 thumb">
                                <a class="post" href="/PostDetailsView/Index/@item.PostId">
                                    <div class="post-image" style="height:200px; width:260px">
                                        <div class="image">
                                            <img style="height:200px; width:255px" src="~/PostImages/@item.PostImage" alt="@item.PostImage">
                                            <h2>@item.AverageRating.ToString("0.0") <i class="glyphicon glyphicon-star"></i></h2>
                                        </div>
                                    </div>
                                    <div style="padding-top:5px; padding-bottom:5px; height:35px; overflow:hidden">
                                        <h4 class="post-title">@item.PostTitle</h4>
                                    </div>
                                </a>

                                <div class="post-money" style="height:15px; text-align:center; padding-top:5px; padding-bottom:20px;">@item.CollectedAmount tk Raised of @item.RequiredAmount tk</div>

                                <div class="progress">
                                    <div class="progress-bar progress-bar-success progress-bar-striped text-center"
                                         role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:@((item.CollectedAmount / item.RequiredAmount)*100)%;">
                                        @Convert.ToInt32(((item.CollectedAmount / item.RequiredAmount) * 100))%
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div><!-- /carousel-inner -->

            <a class="left carousel-control previous" href="#thumbcarousel1" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" style="color: gray;"></span>
            </a>
            <a class="right carousel-control" href="#thumbcarousel1" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" style="color: gray;"></span>
            </a>
        </div> <!-- /thumbcarousel -->
    </div> <!-- /row -->
</div>

