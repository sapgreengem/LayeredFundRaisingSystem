@model IEnumerable<FundRaiserSystemEntity.FundRequestPost>
@{
    ViewBag.Title = "Index";
    if (Session["Login"] == null)
    {
        Layout = "~/Views/Shared/_ViewersLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_UserLayout.cshtml";
    }
}

@section styles{
    <style type="text/css">
    .im-overlay {
            position: absolute;
            top: 80%;
            bottom: 5%;
            left: 20%;
            right: 20%;
            text-align: center;
        }

        .image-width{
        width:100%;

        }
    </style>    
}


<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/PostImages/131558889236175310 21804310_1499810019.576_funddescription.JPG" alt="Los Angeles" style="width:100%;">
                <div class="carousel-caption d-none d-md-block">
                    <h3>1st Img</h3>
                    <p>...</p>
                </div>
            </div>

            <div class="item">
                <img src="~/PostImages/131558911483104600 6276445_1444589910.56.JPG" alt="Chicago" style="width:100%;">
                <div class="carousel-caption d-none d-md-block">
                    <h3>2nd Img</h3>
                    <p>...</p>
                </div>
            </div>

            <div class="item">
                <img src="~/PostImages/131558938197254073 21232164_1497584765.2809.JPG" alt="New york" style="width:100%;">
                <div class="carousel-caption d-none d-md-block">
                    <h3>3rd Img</h3>
                    <p>...</p>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="im-overlay">
    <a href="/AddFundRequest" class="btn btn-lg btn-success">Start Campain</a>
    <a href="~/ViewAllPosts" class="btn btn-lg btn-success">Donate Now</a>
</div>

<br />
<br />

<div class="container">
    <div class="row">
        <h1 class="section-header">Recomended</h1>
        <div id="thumbcarousel" class="carousel slide" data-interval="false">
            <div class="carousel-inner test">
                <div class="item active">
                    @{
                        foreach (var item in ViewBag.recomended)
                        {
                            <div data-target="#carousel" data-slide-to="0" class="col-sm-3 thumb ">
                                <a class="post" href="/PostDetailsView/Index/@item.PostId">
                                    <div class="post-image" style="height:200px; width:260px">
                                        <img style="height:200px; width:250px" src="~/PostImages/@item.PostImage" alt="@item.PostImage">
                                    </div>
                                    <div style="padding-top:5px; padding-bottom:5px; height:50px;">
                                        <h4 class="post-title" style="overflow:hidden">@item.PostTitle</h4>
                                    </div>
                                </a>

                                <div class="post-money" style="height:15px; padding-top:5px; padding-bottom:20px;">@item.CollectedAmount/= Raised of @item.RequiredAmount/=</div>

                                <div class="progress">
                                    <div class="progress-bar-success text-center" role="progressbar" aria-valuenow="70"
                                         aria-valuemin="0" aria-valuemax="100" style="width:@((item.CollectedAmount / item.RequiredAmount)*100)%; color:White">
                                        @Convert.ToInt32(((item.CollectedAmount / item.RequiredAmount) * 100))%
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="item">
                    @{
                        foreach (var item in ViewBag.nextRecomended)
                        {
                            <div data-target="#carousel" data-slide-to="0" class="col-sm-3 thumb ">
                                <a class="post" href="/PostDetailsView/Index/@item.PostId">
                                    <div class="post-image" style="height:200px; width:260px">
                                        <img style="height:200px; width:250px" src="~/PostImages/@item.PostImage" alt="@item.PostImage">
                                    </div>
                                    <div style="padding-top:5px; padding-bottom:5px; height:50px;">
                                        <h4 class="post-title" style="overflow:hidden">@item.PostTitle</h4>
                                    </div>
                                </a>

                                <div class="post-money" style="height:15px; padding-top:5px; padding-bottom:20px;">@item.CollectedAmount/= Raised of @item.RequiredAmount/=</div>

                                <div class="progress">
                                    <div class="progress-bar-success text-center" role="progressbar" aria-valuenow="70"
                                         aria-valuemin="0" aria-valuemax="100" style="width:@((item.CollectedAmount / item.RequiredAmount)*100)%; color:White">
                                        @Convert.ToInt32(((item.CollectedAmount / item.RequiredAmount) * 100))%
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div><!-- /carousel-inner -->

            <a class="left carousel-control previous" href="#thumbcarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#thumbcarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div> <!-- /thumbcarousel -->
    </div> <!-- /row -->
</div>

<br />
